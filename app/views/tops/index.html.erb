<h1>Listing tops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Size</th>
    <th>Brand</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tops.each do |top| %>
  <tr>
    <td><%= top.name %></td>
    <td><%= top.color %></td>
    <td><%= top.size %></td>
    <td><%= top.brand.name %></td>
    <td><%= top.category %></td>
    <td><%= link_to 'Show', top %></td>
    <td><%= link_to 'Edit', edit_top_path(top) %></td>
    <td><%= link_to 'Destroy', top, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

