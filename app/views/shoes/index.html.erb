<h1>Listing shoes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Size</th>
    <th>Brand</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shoes.each do |shoe| %>
  <tr>
    <td><%= shoe.name %></td>
    <td><%= shoe.color %></td>
    <td><%= shoe.size %></td>
    <td><%= shoe.brand.name %></td>
    <td><%= shoe.category %></td>
    <td><%= link_to 'Show', shoe %></td>
    <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
    <td><%= link_to 'Destroy', shoe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

